<Window x:Class="PlutoForChannels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pluto for Channels - .NET" Height="600" Width="800" Background="#1A1A1A">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Active Regions" Foreground="White" FontSize="18" Margin="0,0,0,10"/>
            <ListBox x:Name="CountryList" Background="#252525" Foreground="White" BorderThickness="0" Margin="0,0,0,20">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" 
                                  Foreground="White" Margin="5" Checked="Country_Changed" Unchecked="Country_Changed"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="Authentication" Foreground="White" FontSize="18" Margin="0,0,0,10"/>
            
            <TextBlock Text="Username / Email" Foreground="LightGray" Margin="0,0,0,2"/>
            <TextBox x:Name="UsernameBox" Margin="0,0,0,10" Background="#252525" Foreground="White" Padding="5"/>
            
            <TextBlock Text="Password" Foreground="LightGray" Margin="0,0,0,2"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Background="#252525" Foreground="White" Padding="5"/>
            
            <Button Content="Save Login" Background="#3273DC" Foreground="White" FontWeight="Bold" 
                    Padding="8" BorderThickness="0" Cursor="Hand" Click="SaveLogin_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Pluto for Channels" FontSize="24" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="StatusText" Text="Server: Starting..." Foreground="#3273DC" Margin="0,5,0,20"/>

            <TextBlock Text="Dynamic Feed Links" Foreground="White" Margin="0,0,0,5"/>
            <ItemsControl x:Name="LinksContainer">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#363636" BorderThickness="0,0,0,1" Padding="10">
                            <DockPanel>
                                <Button Content="Copy" Width="60" DockPanel.Dock="Right" Click="CopyLink_Click" Tag="{Binding Url}"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="Bold"/>
                                    <TextBox Text="{Binding Url}" Foreground="#4E8FF1" FontSize="11" 
                                             Background="Transparent" BorderThickness="0" IsReadOnly="True" 
                                             TextWrapping="Wrap" SelectionBrush="#3273DC" Margin="-2,0,0,0"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="Logs" Foreground="White" Margin="0,20,0,5"/>
            <TextBox x:Name="LogBox" Height="150" Background="#000" Foreground="#00FF00" 
                     IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
        </StackPanel>
    </Grid>
</Window>