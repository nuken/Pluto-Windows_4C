<Window x:Class="PlutoForChannels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pluto for Channels - .NET" Height="750" Width="800" Background="#1A1A1A">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Active Regions" Foreground="White" FontSize="18" Margin="0,0,0,10"/>
            <ListBox x:Name="CountryList" Background="#252525" Foreground="White" BorderThickness="0" Margin="0,0,0,20">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" 
                                  Foreground="White" Margin="5" Checked="Country_Changed" Unchecked="Country_Changed"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="Authentication (Round-Robin)" Foreground="White" FontSize="18" Margin="0,0,0,10"/>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="250" Margin="0,0,0,10">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Account 1 (Required)" Foreground="LightGray" Margin="0,0,0,2"/>
                    <TextBox x:Name="UsernameBox" Margin="0,0,0,5" Background="#252525" Foreground="White" Padding="5"/>
                    <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15" Background="#252525" Foreground="White" Padding="5"/>

                    <TextBlock Text="Account 2 (Optional)" Foreground="LightGray" Margin="0,0,0,2"/>
                    <TextBox x:Name="UsernameBox2" Margin="0,0,0,5" Background="#252525" Foreground="White" Padding="5"/>
                    <PasswordBox x:Name="PasswordBox2" Margin="0,0,0,15" Background="#252525" Foreground="White" Padding="5"/>

                    <TextBlock Text="Account 3 (Optional)" Foreground="LightGray" Margin="0,0,0,2"/>
                    <TextBox x:Name="UsernameBox3" Margin="0,0,0,5" Background="#252525" Foreground="White" Padding="5"/>
                    <PasswordBox x:Name="PasswordBox3" Margin="0,0,0,15" Background="#252525" Foreground="White" Padding="5"/>

                    <TextBlock Text="Account 4 (Optional)" Foreground="LightGray" Margin="0,0,0,2"/>
                    <TextBox x:Name="UsernameBox4" Margin="0,0,0,5" Background="#252525" Foreground="White" Padding="5"/>
                    <PasswordBox x:Name="PasswordBox4" Margin="0,0,0,5" Background="#252525" Foreground="White" Padding="5"/>
                </StackPanel>
            </ScrollViewer>

            <Button Content="Save Logins" Background="#3273DC" Foreground="White" FontWeight="Bold" 
                    Padding="8" BorderThickness="0" Cursor="Hand" Click="SaveLogin_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Pluto for Channels v1.0.5" FontSize="24" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="StatusText" Text="Server: Starting..." Foreground="#3273DC" Margin="0,5,0,20"/>

            <TextBlock Text="Dynamic Feed Links" Foreground="White" Margin="0,0,0,5"/>
            <ItemsControl x:Name="LinksContainer">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#363636" BorderThickness="0,0,0,1" Padding="10">
                            <DockPanel>
                                <Button Content="Copy" Width="60" DockPanel.Dock="Right" Click="CopyLink_Click" Tag="{Binding Url}"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="Bold"/>
                                    <TextBox Text="{Binding Url}" Foreground="#4E8FF1" FontSize="11" 
                                             Background="Transparent" BorderThickness="0" IsReadOnly="True" 
                                             TextWrapping="Wrap" SelectionBrush="#3273DC" Margin="-2,0,0,0"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="Logs" Foreground="White" Margin="0,20,0,5"/>
            <TextBox x:Name="LogBox" Height="150" Background="#000" Foreground="#00FF00" 
                     IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
        </StackPanel>
    </Grid>
</Window>